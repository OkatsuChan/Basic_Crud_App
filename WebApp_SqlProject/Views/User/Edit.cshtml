@model WebApp_SqlProject.Models.User

@{
    ViewBag.Title = "Update Account";
}

<h1>Account Update Page</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.UserId)

    <div class="form-group">
        <label for="InputEmail">Email Address</label>
        @Html.TextBoxFor(model => model.UserEmail, new { @type = "email", @class = "form-control", @placeholder = "Enter Email" ,@value= $"{Model.UserEmail}" })
        @Html.ValidationMessageFor(model => model.UserEmail)
    </div>
    <div class="form-group">
        <label for="InputPassword">Password</label>
        @Html.TextBoxFor(model => model.UserPassword, new { @type = "password", @class = "form-control", @placeholder = "Enter Password",@value = $"{Model.UserPassword}" })
        @Html.ValidationMessageFor(model => model.UserPassword)
    </div>
    <button type="submit" class="btn btn-primary">Sumbit</button>
}

