@model WebApp_SqlProject.Models.User

@{
    ViewBag.Title = "Login Page";
}

<h1>Login Access Page</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="InputEmail">Email Address</label>
        @Html.TextBoxFor(model => model.UserEmail, new { @type = "email", @class = "form-control", @placeholder = "Enter Email" })
        @Html.ValidationMessageFor(model => model.UserEmail)
    </div>
    <div class="form-group">
        <label for="InputPassword">Password</label>
        @Html.TextBoxFor(model => model.UserPassword, new { @type = "password", @class = "form-control", @placeholder = "Enter Password" })
        @Html.ValidationMessageFor(model => model.UserPassword)
    </div>
    <button type="submit" class="btn btn-primary">Sumbit</button>
}

@if (TempData["ErrorMessage"] != null)
{
    <script type="text/javascript">
        alert("@TempData["ErrorMessage"]");
    </script>
}